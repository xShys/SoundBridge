{
  "manifest_version": 3,
  "name": "Jellyfin YT Audio Downloader",
  "version": "1.0.0",
  "description": "Download audio from YouTube to Jellyfin media library.",
  "permissions": ["storage", "activeTab", "tabs"],
  "host_permissions": ["https://*/", "http://*/"],
  "action": {
    "default_title": "Download to Jellyfin",
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}